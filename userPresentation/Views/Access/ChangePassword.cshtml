
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangePassword</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Change password</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("ChangePassword","Access")" method="post">

                                        <input class="form-control" type="hidden" value="@TempData["IdCustomer"]" name="idcustomer" />

                                        <div class="row mb-3">
                                            <div class="col-mb-12">
                                                <div class="form-floating mb-3 mb-bd-0">
                                                    <input class="form-control" id="inputPassword1" type="password" name="currentpassword" value="@ViewData["vpassword"]" placeholder="."/>
                                                    <label for="inputPassword1">Current Password</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-mb-12">
                                                <div class="form-floating mb-3 mb-bd-0">
                                                    <input class="form-control" id="inputPassword2" type="password" name="newpassword" placeholder="." />
                                                    <label for="inputPassword2">New Password</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-mb-12">
                                                <div class="form-floating mb-3 mb-bd-0">
                                                    <input class="form-control" id="inputPassword3" type="password" name="confirmpassword" placeholder="."/>
                                                    <label for="inputPassword3">Confirm new Password</label>
                                                </div>
                                            </div>
                                        </div>
                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="row mb-3">
                                                    <div class="col-md-12">
                                                        <div class="alert alert-danger" role="alert">
                                                            @ViewBag.Error
                                                        </div>

                                                    </div>
                                                </div>
                                            }
                                        }
                                        <div class="mt-0 mb-0">
                                            <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Change Password</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("Index","Access")">Back</a></div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </main>
        </div>

    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>