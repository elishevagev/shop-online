@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            max-width: 600px;
            margin: auto;
            padding: 40px;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .login-form input[type="email"],
        .login-form input[type="password"] {
            border-radius: 25px;
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #ced4da;
        }

            .login-form input[type="email"]:focus,
            .login-form input[type="password"]:focus {
                outline: none;
                border-color: #007bff;
                box-shadow: 0px 0px 10px rgba(0, 123, 255, 0.3);
            }

        .login-form button[type="submit"] {
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 18px;
            font-weight: bold;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .login-form button[type="submit"]:hover {
                background-color: #0056b3;
            }

        .forgot-password-link {
            text-align: center;
            margin-top: 20px;
        }

            .forgot-password-link a {
                color: #007bff;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .forgot-password-link a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="login-container">
            <h2 class="login-title">Login</h2>
            <form action="@Url.Action("Index","Access")" method="post" class="login-form">
                <!-- Email input -->
                <div class="form-group">
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email" required />
                </div>
                <!-- Password input -->
                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="form-group">
                        <p class="text-danger">@ViewBag.Error</p>
                    </div>
                }
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
            </form>
            <div class="forgot-password-link">
                <a href="@Url.Action("Reset","Access")">Forgot password?</a>
            </div>
            <p class="text-center">Don't have an account? <a href="@Url.Action("Register","Access")" class="text-primary">Register</a></p>
        </div>
    </div>
</body>
</html>
