@model List<EntityCa.SalesDetails>
@{
    ViewBag.Title = "MyPurchases";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row mt-5">
        <div class="col-sm-12">

            @{
                if (Model.Count > 0)
                {
                    foreach(var item in Model)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <h6>ID TRANSACTION : @item.IdTransaction</h6>
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Product</th>
                                                        <th>Price</th>
                                                        <th>Amount</th>
                                                        <th>SubTotal</th>

                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white">
                                                    <tr>
                                                        <td>
                                                            <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.oProduct.Extension;base64,@item.oProduct.Base64" style="width:120px;height:120px" />
                                                        </td>
                                                        <td>
                                                            @item.oProduct.Name
                                                        </td>
                                                        <td>
                                                            $ @item.oProduct.Price USD
                                                        </td>
                                                        <td>
                                                            @item.Amount
                                                        </td>
                                                        <td>
                                                            $ @item.Total USD
                                                        </td>
                                                    </tr>

                                                </tbody>

                                            </table>

                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>        
                    }
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-sm-12 text-center">
                            <h1>No purchases found</h1>
                        </div>
                    </div>
                }


            }

        </div>

    </div>

</div>
